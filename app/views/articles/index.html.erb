<div id="page-content">
<h1 class="text-center mt-4">Articles Listing Page</h1>
<div class="container" >
  <% @articles.each do |article| %>
    <div class="row justify-content-center">
      <div class="col-md-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            by Greyl
          </div>
          <div class="card-body">
            <h5 class="card-title"><%=link_to article.title, article_path(article),class:"text-success"%> </h5>
            <p class="card-text"><%= truncate article.description, length:100%></p>
            <%=link_to 'View', article_path(article),class:"btn btn-outline-success",type:"button" %>
            <%=link_to 'Edit', edit_article_path(article),class:"btn btn-outline-info",type:"button" %>
            <%=button_to 'Delete', article_path(article), class:"btn btn-outline-danger ml-2",type:"button",method: :delete, form_class: "d-inline"%>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(article.created_at)%> ago,edited <%=time_ago_in_words(article.updated_at)%> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>